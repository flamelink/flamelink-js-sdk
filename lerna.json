{
  "version": "1.0.0-rc.1",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*", "integration/*"],
  "command": {
    "publish": {
      "allowBranch": "master",
      "ignoreChanges": ["*.md"],
      "message": "chore(release): Publish to NPM"
